export SERVER_PORT=8081
export SPRING_FLYWAY_ENABLED=false

export SYNC_TIER=zone
export SYNC_ZONE=zone-a
export SYNC_SUBZONE=_
export SYNC_NODE_ID=zone-a-1

# connect to local Zone-A NATS
export NATS_URL="nats://127.0.0.1:4223"

export SYNC_BOOTSTRAP_ENABLED=true
export SYNC_RELAY_ENABLED=true
export SYNC_ZONE_HAS_SUBZONES=true
export SYNC_OUTBOX_ENABLED=true
export SYNC_POC_ADMIN_ENABLED=true

# ---- Streams owned on Zone-A ----
# UP landing must accept BOTH:
# - up.subzone.zone-a... (from Subzone relay)
# - up.leaf.zone-a...    (Leaf-ZA direct)
export SYNC_UP_SUBZONE_STREAM_ENABLED=true
export SYNC_UP_SUBZONE_STREAM_SUBJECT="up.*.zone-a.>"

# Local inbound DOWN from Central (relay consumes locally)
export SYNC_DOWN_CENTRAL_STREAM_ENABLED=true
export SYNC_DOWN_CENTRAL_STREAM_SUBJECT="down.central.zone-a.>"

# Zone emits transformed DOWN toward subzones/leafs
export SYNC_DOWN_ZONE_STREAM_ENABLED=true
export SYNC_DOWN_ZONE_STREAM_SUBJECT="down.zone.zone-a.>"

# Disable others
export SYNC_UP_ZONE_STREAM_ENABLED=false
export SYNC_UP_LEAF_STREAM_ENABLED=false
export SYNC_DOWN_SUBZONE_STREAM_ENABLED=false
